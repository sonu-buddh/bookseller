<p id="notice"><%= notice %></p>
<div class="row">
    <div class="col-6">
      <h1>Books</h1>
    </div> 
    <div class="col-6 ">
      <%= link_to 'Add Book', new_book_path , class: "btn btn-outline-primary float-right" %>
    </div> 
  </div>
<div class="page">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
        <th>Author</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.description %></td>
          <td><%= link_to 'Show', book %> |
              <%= link_to 'Edit', edit_book_path(book) %> |
              <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
          <td>
            <% book.authors.pluck(:first_name).each do |author| %>
              <span class="label label-info"><%= author %></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>