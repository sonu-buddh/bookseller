<div class="row">
    <div class="col-6">
      <h1>Show Page</h1>
    </div> 
    <div class="col-6 ">
      <%= link_to 'Edit', edit_author_path(@author) , class: "btn btn-outline-primary float-right ml-2" %>
      <%= link_to 'Back', authors_path , class: "btn btn-outline-primary float-right ml-2" %>
    </div> 
  </div>
<div class="page">
  <p>
    <strong>First name:</strong>
    <%= @author.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @author.last_name %>
  </p>

  <p>
    <strong>Date of birth:</strong>
    <%= @author.date_of_birth.strftime("%d %b %Y") %>
  </p>
</div>
